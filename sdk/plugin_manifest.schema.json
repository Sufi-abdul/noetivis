{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Noetivis Plugin Manifest",
  "type": "object",
  "required": [
    "name",
    "version",
    "entrypoints"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "entrypoints": {
      "type": "object",
      "properties": {
        "routes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ui": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}